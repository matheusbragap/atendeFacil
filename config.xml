<?xml version='1.0' encoding='utf-8'?>
<widget id="com.matheusdev.atendefacil" version="1.0.0" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0">
    <name>atendeFacil</name>
    <description>Sample Apache Cordova App</description>
    <author email="dev@cordova.apache.org" href="https://cordova.apache.org">
        Apache Cordova Team
    </author>
    <platform name="electron">
        <preference name="ElectronSettingsFilePath" value="www/res/electron/settings.json" />
        <icon src="www/res/windows/icon.png" target="installer"></icon>
        <icon src="www/res/windows/icon.png" target="app"></icon>
        <hook type="after_prepare" src="www/res/electron/hooks/removeMenu.js" />
    </platform>
    <content src="index.html" />
    <allow-intent href="http://*/*" />
    <allow-intent href="https://*/*" />
</widget>
